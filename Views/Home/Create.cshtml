@model ToDoApp.Models.Entities.ToDo

@{
    ViewData["Title"] = "Create New To-Do";
}

<h1>Create New To-Do</h1>

<form asp-action="AddToDo" method="post">
    <div class="form-group">
        <label asp-for="Detail" class="control-label">Description:</label>
        <input asp-for="Detail" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="IsCompleted" class="control-label">Is Completed?</label>
        <input asp-for="IsCompleted" class="form-check-input" type="checkbox" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
